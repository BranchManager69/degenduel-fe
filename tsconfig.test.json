// tsconfig.test.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    "allowImportingTsExtensions": true,  // Add this
    "noEmit": true  // Add this
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}